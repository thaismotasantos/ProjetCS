<Window x:Class="Projet.TopicNameForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet"
        mc:Ignorable="d"
        Title="TopicNameForm" Height="100" Width="200">
    <Grid Margin="10, 10, 10, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Margin="15, 0, 0, 0">Choose a topic name:</Label>
        <TextBox Grid.Row="1" Grid.Column="0" Name="textBoxTopicName" Margin="15, 0, 0, 0"/>
        <Button Grid.Row="1" Grid.Column="1" Name="buttonSubmitTopicName" Content="OK" Margin="0, 0, 15, 0" Click="buttonSubmitTopicName_Click" />
    </Grid>
</Window>
